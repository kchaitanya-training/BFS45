<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">

  <description>
    Servlet and JSP Examples.
  </description>
  <display-name>Servlet and JSP Examples</display-name>

  <request-character-encoding>UTF-8</request-character-encoding>


  <servlet>
    <servlet-name>servletA</servlet-name>
    <servlet-class>com.sajan.ServletA</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>servletB</servlet-name>
    <servlet-class>com.sajan.ServletB</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>servletC</servlet-name>
    <servlet-class>com.sajan.ServletC</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servletC</servlet-name>
    <url-pattern>/sampleC</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servletA</servlet-name>
    <url-pattern>/sampleA</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servletB</servlet-name>
    <url-pattern>/sampleB</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>servletA</filter-name>
    <filter-class>com.filter.FilterA</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>servletA</filter-name>
    <url-pattern>/sampleA</url-pattern>
  </filter-mapping>



</web-app>
